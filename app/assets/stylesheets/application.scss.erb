@import url(http://fonts.googleapis.com/css?family=Lora|Ubuntu:300,400,500);
@import url(https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400|Roboto:300,400,700);
@import "bootstrap-sprockets";
@import "bootstrap";

body {
    background-color: #f2f2f2;
    font-family: 'Robot Condensed', sans-serif;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: 'Ubuntu', sans-serif;
    font-weight: 300;
}

body .navbar {
  margin: 0;
  font-family: 'Ubuntu', sans-serif;
    .navbar-header {
        .navbar-brand,
        .navbar-nav { font-size: 28px; }
    }
}

body .container-fluid {
    margin: 0;
    padding: 0;
}

.container-fluid .home-jumbotron {
    height: 35em;
    background: url('<%= asset_path('mountains-feature.jpg') %>') 0 0;
    border-radius: 0 !important;
    h1 {
        margin-top: 1.5em;
        color: white;
    }
}

.dashboard-jumbotron {
  height: 25em;
  border-radius: 0 !important;
}

.clear_top { margin-top: 50px !important; }

#notice_wrapper {
  position: absolute;
  bottom: 20px;
  left: 10px;
  background-color: rgba(0,0,0,.9);
  z-index: 9999;
  width: 300px;
  border-radius: 8px;
  p {
    padding: 2.5rem 0;
    text-align: center;
    margin: 0;
    font-weight: 700;
    color: #fff;
    letter-spacing: 1px;
    font-size: 1.5rem;
  }
}

.btn-white {
  background-color: white;
  color: red;
}

.btn-transparent {
  background: none;
  border: 1px solid white;
  color: white;
}

.text-white { color: white; }

.text-brown { color: #771414; }

.text-lg { font-size: 1.3em; }

.text-larger { font-size: 2em; }

.text-orange { color: #ee6123; }

.clear_top_20 { margin-top: 20px; }

.badge { background-color: green !important; }

.bg-dark-blue { background-color: #0e3042; }

.bg-light-blue { background-color: #0e3745 }

.bg-f2 { background-color: #f2f2f2; }

.page-title {
  color: #464c50;
  font-size: 1.6rem/2.2rem;
  font-weight: 400;
  margin-bottom: .75rem;
  word-wrap: break-word;
  height: 2rem;
  letter-spacing: .5px;
}

.mild-padding { padding: 12px 0; }

.light-grey { color: #8f989d; }

small { margin-bottom: 8px; }

.btn-orange-outline {
  border: 1px solid #ee6123;
  border-radius: 4px;
  color: #ee6123;
}

.btn-orange-outline:hover {
  background-color: #ee6123;
  color: white;
}