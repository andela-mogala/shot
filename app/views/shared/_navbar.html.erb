    <% else %>
      <li><a href="#" data-toggle="modal" data-target="#sign-in-Modal" class="btn text-white">Sign In</a></li>
      <li><a href="#" data-toggle="modal" data-target="#sign-up-Modal" class="btn btn-transparent">Sign Up</a></li>
    <% end %>
