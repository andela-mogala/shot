<%= form_for :link, url: { controller: :links, action: 'update'} do |f| %>
  <div class="form-group">
    <%= f.label "Main URL", class: 'control-label' %>
    <%= f.url_field :given_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Short URL", class: 'control-label' %>
    <%= f.text_field :slug, class: 'form-control' %>
  </div>
  <hr>
  <%= f.submit "Update Link", class: 'btn btn-large btn-primary' %>
<% end %>