<div class="jumbotron">
<h1 class="text-center">TurboUrl</h1>
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_for :link, url: {action: 'create'} do |f| %>
      <div class="input-group input-group-lg">
        <%= f.text_field :given_url, class: "form-control", placeholder: "Paste that ugly long url" %>
        <span class="input-group-btn">
          <%= f.submit "Shorten", class: "btn btn-danger" %>
        </span>
      </div>
    <% end %>
  </div>
  <p>
    <br><br>
  </p>
</div>

<div class="container clear_top">

  <div class="row">
  <div class="col-lg-4 col-sm-12">
    <h3 class="h3 text-center">Recent Links</h3>
    <table class="table table-responsive table-bordered">
      <% @recent_links.each do |link| %>
        <tr>
          <td><%= link_to link.display_slug, link.display_slug, class: "btn btn-link" %></td>
          <td><%= pluralize(link.clicks, "hit") %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-lg-4 col-sm-12">
    <h3 class="h3 text-center">Influential Users</h3>
    <table class="table table-responsive table-bordered">
      <% @influential_users.each do |user| %>
        <tr>
          <td>
            <div class="col-lg-2">
              <%= image_tag("user.png", class: "img-responsive", alt: "User" ) %>
            </div>
            <div class="col-lg-10"><%= user.first_name %> <%= user.last_name %>
              <br>
              <small class="small">Member Since <%= time_ago_in_words(user.created_at) %></small>
              <small class="small pull-right"><span class="badge"><%= pluralize(user.links.size, "link") %></span></small>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-lg-4 col-sm-12">
    <h3 class="h3 text-center">Popular Links</h3>
    <table class="table table-responsive table-bordered">
      <% @popular_links.each do |link| %>
        <tr>
          <td>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>&nbsp;&nbsp;
            <%= link_to link.display_slug, link.display_slug, class: "btn btn-link" %></td>
          <td><%= pluralize(link.clicks, "hit") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
