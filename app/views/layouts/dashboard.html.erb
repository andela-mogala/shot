<!DOCTYPE html>
<html>
<head>
  <title>Dashboard | <%= current_user.first_name %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400|Roboto:300,400,700" rel="stylesheet">
</head>
<body>

  <%= render 'layouts/flash' %>

  <nav class="navbar navbar-fixed-top bg-dark-blue">
    <%= render 'shared/navbar' %>
  </nav>

  <div class="container-fluid">
  <div class="jumbotron bg-light-blue dashboard-jumbotron">
    <div class="col-lg-9 col-lg-offset-2 clear_top">
      <%= form_for :link, url: {controller: :links, action: 'create'} do |f| %>
        <div class="form-group">
          <%= f.url_field :given_url, class: "form-control input-lg", placeholder: "Paste that ugly long url...", required: 'true' %>
        </div>
        <div class="form-group">
          <%= f.text_field :slug, class: "form-control input-lg", placeholder: "Your custom text goes here" %>
        </div>
        <div>
            <%= f.submit "CREATE LINK", class: "btn btn-primary btn-lg col-lg-6 col-lg-offset-3" %>
        </div>
      <% end %>
    </div>
  </div>
    <%= yield %>
  </div>
</body>
</html>