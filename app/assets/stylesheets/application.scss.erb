@import "bootstrap-sprockets";
@import "bootstrap";
body { font-family: 'Roboto', sans-serif }

body .navbar {
  margin: 0;
    .navbar-header {
        .navbar-brand,
        .navbar-nav { font-size: 28px; }
    }
}

body .container-fluid {
    margin: 0;
    padding: 0;
}

.container-fluid .jumbotron {
    height: 35em;
    background: url('<%= asset_path('mountains-feature.jpg') %>') 0 0;
    border-radius: 0 !important;
    h1 {
        margin-top: 1.5em;
        color: white;
    }
}

.clear_top { margin-top: 50px !important; }

#notice_wrapper {
  position: absolute;
  top: 0;
  background-color: rgba(135,216,211,0.85);
  z-index: 999;
  width: 100%;
  p {
    padding: 2.5rem 0;
    text-align: center;
    margin: 0;
    font-weight: 700;
    color: #fff;
    letter-spacing: 1px;
    font-size: 1.5rem;
  }
}

.btn-white {
  background-color: white;
  color: red;
}

.btn-transparent {
  background: none;
  border: 1px solid white;
  color: white;
}

.text-white { color: white; }

.text-brown { color: #771414; }

.text-lg { font-size: 1.3em; }

.text-larger { font-size: 2em; }

.clear_top_20 { margin-top: 20px; }

.badge { background-color: green !important; }