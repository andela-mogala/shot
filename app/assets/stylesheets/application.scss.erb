@import "bootstrap-sprockets";
@import "bootstrap";
body .navbar {
    margin: 0;
    .navbar-header {
        .navbar-brand,
        .navbar-nav {
            font-size: 28px;
        }
    }
}

body .container-fluid {
    margin: 0;
    padding: 0;
}

.container-fluid .jumbotron {
    border-radius: 0;
    height: 30em;
    background: url('<%= asset_path('turbo-url-bg.jpg') %>') 0 0;
    h1 {
        margin-top: 1.5em;
        color: white;
    }
}

body .container {
  margin-top: 50px;
}

#notice_wrapper {
  position: absolute;
  top: 0;
  background-color: rgba(135,216,211,0.85);
  z-index: 999;
  width: 100%;
  p {
    padding: 2.5rem 0;
    text-align: center;
    margin: 0;
    font-weight: 700;
    color: #fff;
    letter-spacing: 1px;
    font-size: 1.25rem;
  }
}
