<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_for :link, url: {action: 'create'} do |f| %>
      <div class="input-group input-group-lg">
        <%= f.text_field :given_url, class: "form-control", placeholder: "Paste that ugly long url" %>
        <span class="input-group-btn">
          <%= f.submit "Shorten", class: "btn btn-danger" %>
        </span>
      </div>
    <% end %>
  </div>
</div>

<% if !flash[:notice].blank? %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% elsif !flash[:error].blank? %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:error] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
  <div class="col-lg-6 col-sm-12">
    <h3 class="h3 text-center">Recent Links</h3>
    <table class="table-responsive table-striped">
      <% @recent_links.each do |link| %>
        <tr>
          <td><%= link_to link.display_slug, link.display_slug, class: "text-center" %></td>
          <td><%= pluralize(link.clicks, "click") %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-lg-6 col-sm-12">
    <h3 class="h3 text-center">Popular Links</h3>
    <table class="table-responsive table-striped">
      <% @popular_links.each do |link| %>
        <tr>
          <td><%= link_to link.display_slug, link.display_slug, class: "text-center" %></td>
          <td><%= pluralize(link.clicks, "click") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
